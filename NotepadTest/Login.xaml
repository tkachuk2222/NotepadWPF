<Window x:Class="NotepadTest.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NotepadTest"
        mc:Ignorable="d"
        Title="Login" Height="300" Width="300"
        Loaded="Window_Loaded">
    <Grid Background="LightBlue">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Grid.Column="0" Content="Name" Height="30" Width="70" HorizontalAlignment="Right"></Label>
        <TextBox Grid.Column="1" Grid.Row="0" Height="30" Width="100" HorizontalAlignment="Left" Name="tbName"></TextBox>
        <Button Grid.Column="0" Grid.Row="1" Width="100" Height="40" Name="btLogOK" Content="OK" Click="btLogOK_Click"></Button>
        <Button Grid.Column="1" Grid.Row="1" Width="100" Height="40" Name="btLogCancel" Content="Cancel" Click="btLogCancel_Click"></Button>
    </Grid>
</Window>
